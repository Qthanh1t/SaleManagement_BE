<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="005-1" author="admin">
        <createTable tableName="goods_receipts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="supplier_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_receipts_suppliers" references="suppliers(id)"/>
            </column>
            <column name="user_id" type="BIGINT"> <constraints nullable="false" foreignKeyName="fk_receipts_users" references="users(id)"/>
            </column>
            <column name="receipt_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="total_amount" type="DECIMAL(19, 2)"/>
            <column name="note" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="005-2" author="admin">
        <createTable tableName="goods_receipt_details">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="receipt_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_receiptdetails_receipts" references="goods_receipts(id)"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_receiptdetails_products" references="products(id)"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="entry_price" type="DECIMAL(19, 2)"> <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="005-3" author="admin">
        <createTable tableName="stock_adjustments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_adjustments_products" references="products(id)"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_adjustments_users" references="users(id)"/>
            </column>
            <column name="old_quantity" type="INT"/>
            <column name="new_quantity" type="INT"/>
            <column name="reason" type="TEXT"/>
            <column name="adjustment_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>